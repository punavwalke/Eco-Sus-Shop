<%= flash[:notice]%>
<h2 style="display:flex;align-items:center;justify-content:center" class="mt-2">Checkout</h2>
<section class="vh-100">
  <div class="container h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="data:image/png;base64,"
          class="img-fluid" alt="Phone image">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTq0UtxHPJ06tS_AUUERgMxeaADDZxVsYVwkw&usqp=CAU"
          class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
       <h3>Total Amount to paid : <%= number_to_currency(session[:amount]) %></h3>
       <%= form_with url: "/gallery/checkout", method: :post do |f| %>
  <div class="field">
    <%= f.label :first_name,class:'form-label' %><br />
    <%= f.text_field :first_name ,class:'form-control form-control'%>
  </div>
  <div class="field">
    <%= f.label :last_name,class:'form-label' %><br />
    <%= f.text_field :last_name ,class:'form-control form-control'%>
  </div>
  <div class="field">
    <%= f.label :credit_card_no ,class:'form-label'%><br />
    <%= f.text_field :credit_no,class:'form-control form-control' %>
  </div>
  <div class="field">
    <%= f.label :date_of_expiry ,class:'form-label'%><br />
        <select name="check[month]" id="check_out_month">
        <option selected value="01">Janurary
        <option  value="02">Feburary
        <option  value="03">March
        <option  value="04">April
        <option  value="05">May
        <option  value="06">June
        <option  value="07">July
        <option  value="08">August
        <option  value="09">September
        <option  value="10">October
        <option  value="11">November
        <option  value="12">December
        </select>
        <select name="check[year]" id=check_out_year">
        <option selected value="2024">2024
        <option  value="2025">2025
        <option  value="2026">2026
        <option  value="2027">2027
        <option  value="2028">2028
        <option  value="2029">2029
        <option  value="2030">2030
        <option  value="2031">2031
        <option  value="2032">2032
        <option  value="2033">2033
    </select>
  </div>
 
  <div class="field">
    <%= f.label :verification_number ,class:'form-label'%><br />
    <%= f.text_field :verification_number ,class:'form-control form-control'%>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class:"mt-2 btn btn-outline-primary"%>
  </div>
  <% end %>
      </div>
    </div>
  </div>
</section>




