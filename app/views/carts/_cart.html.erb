<% unless cart.line_items.empty? %>

<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
<div>
    <%= link_to "Continue Shopping",:controller=>"gallery",:action=>"index" %> 

        </div>
        </div>

    <%= render(cart.line_items) %>

       <div class="card mb-4">
          <div class="card-body p-4 d-flex flex-row">
            <h3>Total : <%= number_to_currency(cart.total_price)  %></h3>
          </div>
        </div>
        <% session[:amount] = cart.total_price%>
        
        <div class="card">
          <div class="card-body d-flex">
<%= button_to 'Empty Cart', cart, :method => :delete, :confirm => 'Are you sure?',class:'btn btn-outline-primary me-3' %>
<% if user_signed_in? %>
<%= link_to "Checkout", gallery_checkout_path ,class:'btn btn-warning btn-block'%>
<% else %>
<%= link_to "Checkout", new_user_session_path ,class:'btn btn-warning btn-block'%>
<% end %>

          </div>
        </div>
        
      </div>
    </div>
  </div>
</section>

<%end%>