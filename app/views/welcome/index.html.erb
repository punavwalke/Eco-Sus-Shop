<%# best selling products %>
<!-- Best Selling Products Section -->
<section class="container mt-5">
<h2 class="text-center mb-4">Best Selling Products</h2>
<div class="row">
<% @products.each do |product|%>
<div class="col-md-4 pb-5 ps-5 pe-5 pt-5">
<div class="card">
 <%= image_tag product.product_image,class:'card-img-top'%>
<div class="card-body">
<h5 class="card-title"><%= product.name%></h5>
<p class="card-text">Price : <%= product.price%></p>
</div>
</div>
</div>
<%end%>

</div>
<div class="text-center">
<%= link_to "View All Products", gallery_index_path, class: "btn btn-outline-primary" %> 
</div>
</section>

